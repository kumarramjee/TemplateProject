<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <RelativeLayout
        android:id="@+id/entitidd"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/entityidtext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:text="Entity Id"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/entityid"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:text="Mobimedia"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/entitipedd"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/entitidd">

        <TextView
            android:id="@+id/entitynametext"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:text="Entity Name"
            android:textColor="#ffffff"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/entityname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Technology"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/typiid"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/entitipedd">

        <TextView
            android:id="@+id/typeiidtext"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:text="Type Id"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/type_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Technology"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pricelist"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/typiid">

        <TextView
            android:id="@+id/pricetext"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:text="Price"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Technology"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/visibilityy"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/pricelist">

        <TextView
            android:id="@+id/visibilitytext"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:text="Visibility"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/visibility"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Technology"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/descriptionchef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visibilityy">

        <TextView
            android:id="@+id/descritiponmtxt"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:text="Description"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/descritiponmtxt"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Technology"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>