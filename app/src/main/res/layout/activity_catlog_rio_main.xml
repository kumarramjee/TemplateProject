<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#542154"
    tools:context=".CatlogRioMain">


    <TextView
        android:id="@+id/riocatlogtext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="RioCatLog"
        android:textColor="#ffffff"
        android:textSize="25sp" />


    <RelativeLayout
        android:id="@+id/catgrryid"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/riocatlogtext">

        <TextView
            android:id="@+id/cateid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"
            android:text="Category Id"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/categoryid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:text="@string/hello_world"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timestamppid"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/catgrryid">

        <TextView
            android:id="@+id/timestampp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"
            android:text="Timestamp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentRight="true"
            android:text="@string/hello_world"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/catgrryname"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:layout_below="@+id/timestamppid">

        <TextView
            android:id="@+id/catname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"
            android:text="@string/hello_world"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/rootcatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentRight="true"
            android:text="@string/hello_world"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mediaurl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catgrryname"
        android:layout_margin="16dp"
        android:text="@string/hello_world"
        android:textColor="#ffffff"
        android:visibility="gone" />

    <ListView
        android:id="@+id/categorylist"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/mediaurl"
        android:layout_margin="16dp"
        android:background="#80000000"></ListView>

    <TextView
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/expendiblelistview"
        android:layout_margin="5dp"
        android:background="#80000000"
        android:gravity="center"
        android:text="Get Notification"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ExpandableListView
        android:id="@+id/expendiblelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categorylist"
        android:layout_margin="5dp"
        android:background="#80000000"
        android:visibility="gone"

        ></ExpandableListView>

    <ImageView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="#80000000"
        android:gravity="center"
        android:src="@drawable/nexticon"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>
